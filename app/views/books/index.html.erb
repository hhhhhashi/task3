<main>
  <h1>User info</h1>

  <%= image_tag @user.get_profile_image(100,100)%>
  
  <%=@user.name %>
  
  <%=@user.introduction %>











<h1>New book</h1>

<%= form_with model: @book do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

<% end %>


<% @books.each do |book| %>

  <p>画像</p>
  <%= image_tag book.image, size: "200x200" %>

  <p>name</p>
  <span>
    <%=link_to book.title, book_path(book.id) %>
  </span>

    <p>name</p>
  <span>
    <%=link_to book.body, book_path(book.id) %>
  </span>

<% end %>
</main>