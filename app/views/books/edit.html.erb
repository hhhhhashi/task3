<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>Editing Book</h2>

<%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>
<div class="form-group">
  <label for="book_title">Title</label>

  <%= f.text_field :title %>
</div>

<div class="form-group">
  <label for="book opinion">Opinion</label>

  <%= f.text_area :body %>
</div>

<div class="form-group">
  <%= f.submit 'Update Book',class:"btn btn-success" %>
</div>

  <%=link_to "show",book_path(@book), class:"book_47410" %>
  <%=link_to "back",books_path, class:"back"%>


<% end %>
</div>
</div>
</div>
